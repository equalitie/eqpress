/var/log/nginx/*.log {
        daily 
        missingok
        rotate 14 
        compress
        dateext
        delaycompress
        ifempty
        notifempty
        create 0640 www-data adm
        sharedscripts
        prerotate
                if [ -d /etc/logrotate.d/httpd-prerotate ]; then \
                        run-parts /etc/logrotate.d/httpd-prerotate; \
                fi \
        endscript
        postrotate
		/usr/sbin/nginx -s reopen
        endscript
}

user {{ web_user }};
worker_processes {{ nginx_worker_processes }};
worker_priority -5;
worker_rlimit_nofile 32768;
pid /run/nginx.pid;
include /etc/nginx/modules-enabled/*.conf;

events {
	worker_connections 16384;
	multi_accept on;
}

http {
        # Block IP addresses not playing nice.
	#include /etc/nginx/blacklist.conf;

	limit_req_zone $binary_remote_addr zone=one:10m rate=10r/m;

	##
	# configure cache to store data about files and directories like
	# open descriptors, sizes, mod times, directory lookups
	## 

	open_file_cache max=5000 inactive=300s;
	open_file_cache_valid 360s;
	open_file_cache_min_uses 2;
	open_file_cache_errors on;

        etag on;
	sendfile on;
	tcp_nopush off;
	tcp_nodelay on;
	keepalive_timeout 21 21;
	types_hash_max_size 2048;
	server_names_hash_max_size 4096;
	server_names_hash_bucket_size 128;
	server_tokens off;

	include /etc/nginx/mime.types;
	default_type application/octet-stream;
	client_max_body_size 32M;

	##
	# default logs
	##

        include /etc/nginx/eqpress-common/common_log_formats.conf;
        access_log /var/log/nginx/access.log press_default;
        error_log /var/log/nginx/error.log;

	##
	# cache settings and locations
	##

	include /etc/nginx/eqpress-common/common_cache.conf;

	##
	# Gzip Settings
	##

	gzip on;
	gzip_vary off;
	gzip_proxied any;
	gzip_comp_level 6;
	gzip_buffers 32 8k;
	gzip_disable "msie6";
	gzip_min_length 1400;
	gzip_http_version 1.1;
	gzip_types text/plain text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript text/x-component text/richtext image/svg+xml text/xsd text/xsl image/x-icon;

	##
	# upstream app servers
	##

	index index.php index.html index.htm pw.php;
	upstream php{{ php_version }}-fpm-admin-sock {
		server unix:/var/run/php/php{{ php_version }}-fpm-admin.sock;
	}

	# This is site default socket.
	# The varialble $sock is used globally and overwritten if needed for custom.
	map $host $sock {
		default php{{ php_version }}-fpm-unix-sock;
	}
	upstream php{{ php_version }}-fpm-unix-sock {
	        server unix:/var/run/php/php{{ php_version }}-fpm.sock;
	}
	upstream php{{ php_version }}-fpm-tcp-sock {
		server 127.0.0.1:9000;
	}

	##
	# Catch-all server block -
	##
	server {
		listen 80 default_server;
		server_name _;
		access_log /var/log/nginx/catch-all.access.log press_default;
		error_log /var/log/nginx/catch-all.error.log;
		server_name_in_redirect off;
		root {{ eqpress_root_dir }}/catchall;

		location / {
			# Force return 503 but serve index.html
			error_page 503 = /index.html;
			return 503;
		}
 	}
	server {
		listen 443 ssl default_server;
		http2 on;
		server_name _;
		access_log /var/log/nginx/catch-all.access.log press_default;
		error_log /var/log/nginx/catch-all.error.log;
		server_name_in_redirect off;
		root {{ eqpress_root_dir }}/catchall;
		include /etc/nginx/eqpress-common/common_eqpress_ssl.conf;

		location / {
			# Force return 503 but serve index.html
			error_page 503 = /index.html;
			return 503;
		}
	}
 
        ##
        # Global SSL configuration
        ##
        ##

        ssl_protocols TLSv1 TLSv1.1 TLSv1.2 TLSv1.3; # Dropping SSLv3, ref: POODLE
        ssl_prefer_server_ciphers on;

        # Required because of http://trac.nginx.org/nginx/ticket/235
        ssl_session_cache shared:SSL:20m;

	##
	# Virtual Host Configs
	##
	include /etc/nginx/conf.d/*.conf;
	include /etc/nginx/sites-enabled/*;
}

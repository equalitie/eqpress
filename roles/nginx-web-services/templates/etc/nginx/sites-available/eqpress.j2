	include /etc/nginx/eqpress-common/common_eqpress_ssl.conf;
	include /etc/nginx/eqpress-common/common_location_ep.conf;

	location / {
		try_files $uri $uri/ /index.php?$args;
	}

	location ~ \.php$ {
		include /etc/nginx/eqpress-common/common_fastcgi.conf;
	}
 
	include /etc/nginx/eqpress-common/common_adminer.conf;
}

##
# eqpress customer console
##
server {
	listen 127.0.0.1:80;
	server_name console.localdomain;
	access_log /var/log/nginx/console.localdomain.access.log;
	error_log /var/log/nginx/console.localdomain.error.log;
	root {{ eqpress_root_dir }}/console;

	location / {
		try_files $uri $uri/ /index.php?$args;
	}

	location ~ \.php$ {
		include fastcgi_params;
		fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
		fastcgi_split_path_info ^(.+\.php)(/.+)$;
		fastcgi_index index.php;
		fastcgi_pass php{{ php_version }}-fpm-admin-sock;
	}
}
